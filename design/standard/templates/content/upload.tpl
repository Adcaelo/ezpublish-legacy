{* DO NOT EDIT THIS FILE! Use an override template instead. *}
<form enctype="multipart/form-data" action={'content/upload'|ezurl} method="post">

{section show=$browse.description_template}
    {include name=Description uri=$browse.description_template browse=$browse main_node=$main_node}
{section-else}
    <div class="maincontentheader">
    <h1>{"Upload file"|i18n("design/standard/content/view")}</h1>
    </div>

    <p>{'Choose a file from your locale machine and click the "Upload" button.'|i18n("design/standard/content/view")}</p>
{/section}

{section show=$errors|count|gt( 0 )}
    <div class="error">
        <h2>{"Some errors occured"|i18n( "design/standard/upload" )}</h2>
        <ul>
            {section var=error loop=$errors}
                <li>{$error.description}</li>
            {/section}
        </ul>
    </div>
{/section}

<input type="hidden" name="BrowseActionName" value="{$browse.action_name}" />

<input type="hidden" name="MAX_FILE_SIZE" value="50000000" />
<input name="UploadFile" type="file" />
<input class="defaultbutton" type="submit" name="UploadFileButton" value="{'Upload'|i18n( 'design/standard/upload' )}" />
